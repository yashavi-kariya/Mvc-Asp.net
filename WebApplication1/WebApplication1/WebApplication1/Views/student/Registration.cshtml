@model WebApplication1.Models.Student

@{
    ViewBag.Title = "Registration";
}

<h2>Registration</h2>

@using (Html.BeginForm("Registration", "student", FormMethod.Post))
{
    @Html.TextBoxFor(m => m.fname, new { @class = "form-control" })
    <br />
    @Html.TextBoxFor(m => m.lname, new { @class = "form-control" })
    <br />
    <input type="submit" value="submit" name="submit" class="btn-primary"/>
}